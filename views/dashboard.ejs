    grouptable.makeEditable(
            {
                sUpdateURL: updateGroup,
                aoColumns:
                        [
                            null,
                            {
                                event: 'click',
                                indicator: '<%= __("dashboard.groups.selectrole") %>',
                                loadtext: 'loading...',
                                id: "groupName",
                                onblur: 'submit'
                            },
