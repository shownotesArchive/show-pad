<script>
var groups = []

$(function ()
{
    refreshGroups();
    refreshDoctypes();

    addModal("user-grp",
            "<%= __('dashboard.colledit.user.group.title') %>",
            "<%= __('dashboard.colledit.user.group.addText') %>");

    addModal("user-role",
