    usertable.makeEditable(
            {
                sUpdateURL: updateUser,
                aoColumns:
                        [
                            null,
                            null,
                            null,
                            null,
                            {
                                event: 'click',
                                indicator: '<%= __("dashboard.users.selectstatus") %>',
                                loadtext: 'loading...',
                                id: "userStatus",
                                type: 'select',
                                onblur: 'submit',
                                data: "{'banned':'Banned','email':'Email','normal':'Normal'}"
                            }
                        ]
